<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Property On Guard", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? || analyst_signed_in? %>
            <% if analyst_signed_in? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", analyst_signed_in? ? current_analyst : current_user %></li>
                <li><%= link_to "Settings", analyst_signed_in? ? edit_analyst_path(current_analyst) : edit_user_path(current_user)  %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", analyst_signed_in? ? signout_analyst_path : signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>