<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <%= f.label :name %>
	  <%= f.text_field :name%>

	 	<%= f.label :email %>
	  <%= f.email_field :email, autofocus: true %>

	  <%= f.label :password %>
	  <%= f.password_field :password, autocomplete: "off" %>

	  <%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation, autocomplete: "off" %>

	  <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>

	<% end %>
	<%= link_to("Sign Up with Facebook".html_safe,user_omniauth_authorize_path("facebook"),:class=>"btn btn-default btn-sm btn-social-facebook") %>
   		 <%= link_to("Sign Up with Google".html_safe,user_omniauth_authorize_path("google_oauth2"),:class=>"btn btn-default btn-sm btn-social-googleplus") %>
	</div>
</div>


