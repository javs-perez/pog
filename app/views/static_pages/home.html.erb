<% if user_signed_in? || analyst_signed_in?  %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' if user_signed_in?%>
        <%= render 'shared/analyst_info' if analyst_signed_in?%>
      </section>
      <% if user_signed_in? %>
        <section>
          <%= render 'shared/property_form' %>
        </section>
      <% end %>  
    </aside>
    <% if user_signed_in? %>
    <div class="span8">
      <h3>Property Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    <% end %>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to </h1>
    <h1>Property On Guard</h1>

    <h2>
      Every home faces property fraud.
      Property On Guard helps prevent it.
    </h2>

    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("pog.gif", alt: "POG"), 'http://www.propertyonguard.com/' %>
<% end %>